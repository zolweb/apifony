<?php

namespace {{ controller.namespace }};

use RuntimeException;
use Symfony\Component\HttpFoundation\JsonResponse;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Serializer\Encoder\JsonEncoder;
use Symfony\Component\Validator\Constraints as Assert;
use Symfony\Component\Validator\ConstraintViolationInterface;
use {{ controller.bundleNamespace }}\Api\AbstractController;
{% for constraintName in controller.usedFormatConstraintNames %}
use {{ controller.bundleNamespace }}\Format\{{ constraintName }} as Assert{{ constraintName }};
{% endfor %}

class {{ controller.className }} extends AbstractController
{
    private {{ controller.handler.className }} $handler;

    public function setHandler({{ controller.handler.className }} $handler): void
    {
        $this->handler = $handler;
    }

{%~ for action in controller.actions %}
    public function {{ action.name }}(
        Request $request,
{%~ for param in action.parameters(['path']) %}
        {{ param.phpType }} ${{ param.rawName }},
{%~ endfor %}
    ): Response {
    {%~ for param in action.parameters(['path']) %}
        ${{ param.variableName }} = ${{ param.rawName }};
    {%~ endfor %}
{%~ for param in action.parameters(['query', 'header', 'cookie']) %}
        ${{ param.variableName }} = $this->get{{ param.phpType|capitalize }}{{ param.nullable ? 'OrNull' : '' }}Parameter($request, '{{ param.rawname }}', '{{ param.in }}', {{ param.required ? 'true' : 'false' }}{{ param.hasDefault ? ', ' ~ param.default : ''}});
{%~ endfor %}
        $errors = [];
{%~ for param in action.parameters %}
        $violations = $this->validator->validate(
            ${{ param.variablename }},
            [
        {%~ for constraint in param.constraints %}
                {{~ constraint.instantiation(4) }},
        {%~ endfor %}
            ]
        );
        if (count($violations) > 0) {
            $errors['{{ param.in }}']['{{ param.rawname }}'] = array_map(
                fn (constraintviolationinterface $violation) => $violation->getmessage(),
                iterator_to_array($violations),
            );
        }
    {%~ if param.required and param.in in ['query', 'header', 'cookie'] %}
        if (!$request->{{ param.requestcollection }}->has('{{ param.rawname }}')) {
            $errors['{{ param.in }}']['{{ param.rawname }}'][] = 'parameter {{ param.rawname }} in {{ param.in }} is required.';
        }
    {%~ endif %}
{%~ endfor %}
{%~ if action.requestbodies %}
        switch ($requestbodypayloadcontenttype = $request->headers->get('content-type', 'unspecified')) {
    {%~ for requestbody in action.requestbodies %}
            case '{{ requestbody.mimetype ?? 'unspecified' }}':
        {%~ if requestbody.mimetype is null %}
                $requestbodypayload = null;
                $violations = [];
        {%~ elseif requestbody.mimetype is same as ('application/json') %}
                {{ requestbody.initializationfromrequest }}
                {{ requestbody.validationviolationsinitialization }}
        {%~ endif %}

                break;
    {%~ endfor %}
            default:
                return new jsonresponse(
                    [
                        'code' => 'unsupported_request_type',
                        'message' => "the value '$requestbodypayloadcontenttype' received in content-type header is not a supported format.",
                    ],
                    response::http_unsupported_media_type,
                );
        }
        if (count($violations) > 0) {
            foreach ($violations as $violation) {
                $errors['body'][$violation->getpropertypath()][] = $violation->getmessage();
            }
        }
{%~ endif %}
        if (count($errors) > 0) {
            return new jsonresponse(
                [
                    'code' => 'validation_failed',
                    'message' => 'validation has failed.',
                    'errors' => $errors,
                ],
                response::http_bad_request,
            );
        }
        $responsepayloadcontenttype = $request->headers->get('accept');
        switch (true) {
{%~ for requestbodypayloadtype in action.requestbodypayloadtypes %}
            case {{ requestbodypayloadtype is null ? 'is_null($requestbodypayload)' : requestbodypayloadtype.requestbodypayloadtypechecking }}:
                switch($responsepayloadcontenttype) {
    {%~ for responsecontenttype in action.responsecontenttypes %}
        {%~ set case = action.getcase(requestbodypayloadtype, responsecontenttype) %}
                    case {{ case.responsecontenttype is null ? 'null' : '\'' ~ case.responsecontenttype ~ '\'' }}:
                        $response = $this->handler->{{ case.name }}(
        {%~ for param in case.parameters %}
                            ${{ param.variablename }},
        {%~ endfor %}
        {%~ if case.requestbodypayloadparameter %}
                            $requestbodypayload,
        {%~ endif %}
                        );

                        break;
    {%~ endfor %}
                    default:
                        return new jsonresponse(
                            [
                                'code' => 'unsupported_response_type',
                                'message' => "the value '$responsepayloadcontenttype' received in accept header is not a supported format.",
                            ],
                            response::http_unsupported_media_type,
                        );
                }

                break;
{%~ endfor %}
            default:
                throw new runtimeException();
        }
        switch ($response::CONTENT_TYPE) {
{%~ for responseContentType in action.responseContentTypes %}
            case {{ responseContentType is null ? 'null' : '\'' ~ responseContentType ~ '\'' }}:
    {%~ if responseContentType is null %}
                return new Response('', $response::CODE, $response->getHeaders());
    {%~ elseif responseContentType is same as ('application/json') %}
                return new JsonResponse($response->payload, $response::CODE, $response->getHeaders());
    {%~ endif %}
{%~ endfor %}
            default:
                throw new RuntimeException();
        }
    }}
    {%~ if not loop.last %}

    {%~ endif %}
{%~ endfor %}
}
