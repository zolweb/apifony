<?php

namespace App\Controller;

{% set operation = spec.paths[route][method] %}
interface {{ operation.operationId|toHandlerClassName }}
{
    public function handle(
        {%~ for parameter in getOperationParams(spec, route, method) %}
        {{ toPhpParam(spec, parameter) }}
        {%~ endfor %}
        {%~ if operation.requestBody.content['application/json'].schema['$ref'] is defined %}
        {{ operation.requestBody.content['application/json'].schema['$ref']|toSchemaClassName }} $dto,
        {%~ endif %}
    );
}
